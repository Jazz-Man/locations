extends common/layout

block append content
	.container
		+breadcrumb
		// end breadcrumb
		section.page-title.center
			h1 Your Profile
		// end page-title
		section
			.row
				.col-md-6.col-sm-6.col-md-offset-3.col-sm-offset-3
					form.form.inputs-underline
						section
							.user-details.box
								.user-image
									.image
										.bg-transfer(data-bg=require('assets/img/person-01.jpg'))
										.single-file-input
											input#user_image(type='file' name='user_image')
											div
												| Upload a picture
												i.fa.fa-upload
									// end image
								// end user-image
								.description.clearfix
									h3 Your current plan
									h2 Gold Package
									a.btn.btn-default.btn-rounded.btn-xs(href='#') Change
									hr
									figure
										.pull-left
											strong Next payment:
										.pull-right 24/12/2015
								// end description
						// end user-details
						section
							h3 About You
							.row
								.col-md-6.col-sm-6
									.form-group
										label(for='first_name') First Name
										input#first_name.form-control(type='text' name='first_name' value='Jane')
									// end form-group
								// end col-md-6
								.col-md-6.col-sm-6
									.form-group
										label(for='last_name') Last Name
										input#last_name.form-control(type='text' name='last_name' value='Green')
									// end form-group
								// end col-md-6
								.col-md-6.col-sm-6
									.form-group
										label(for='email') Email
										input#email.form-control(type='email' name='email' value='jane@example.com')
									// end form-group
								// end col-md-6
								.col-md-6.col-sm-6
									.form-group
										label(for='phone') Phone
										input#phone.form-control(type='text' name='phone' value='+1 260-478-7987')
									// end form-group
								// end col-md-6
							// end row
							.form-group
								label(for='message') About You
								textarea#message.form-control(rows='2' name='message' placeholder='Something about me')
							// end form-group
						section
							h3 Your Social Networks
							.row
								.col-md-6.col-sm-6
									.form-group
										label(for='facebook') Facebook
										input#facebook.form-control(type='text' name='facebook' placeholder='Facebook')
									// end form-group
								// end col-md-6
								.col-md-6.col-sm-6
									.form-group
										label(for='twitter') Twitter
										input#twitter.form-control(type='text' name='twitter' placeholder='Twitter')
									// end form-group
								// end col-md-6
								.col-md-6.col-sm-6
									.form-group
										label(for='pinterest') Pinterest
										input#pinterest.form-control(type='text' name='pinterest' placeholder='Pinterest')
									// end form-group
								// end col-md-6
								.col-md-6.col-sm-6
									.form-group
										label(for='youtube') Youtube
										input#youtube.form-control(type='text' name='youtube' placeholder='Youtube')
									// end form-group
								// end col-md-6
							// end row
						section.center
							.form-group
								button.btn.btn-primary.btn-rounded(type='submit') Save Changes
							// end form-group
					// end form
					hr
				// end col-md-6
			// end row
		section
			section
				.row
					.col-md-4.col-sm-4.col-md-offset-4.col-sm-offset-4
						h3.center Change Your Password
						form.form.inputs-underline
							.form-group
								label(for='current_password') Current Password
								input#current_password.form-control(type='password' name='current_password' value='******')
							// end form-group
							.form-group
								label(for='new_password') New Password
								input#new_password.form-control(type='password' name='new_password' placeholder='New Password')
							// end form-group
							.form-group
								label(for='confirm_new_password') Confirm New Password
								input#confirm_new_password.form-control(type='password' name='confirm_new_password' placeholder='Confirm New Password')
							// end form-group
							.form-group.center
								button.btn.btn-primary.btn-framed.btn-rounded.btn-light-frame(type='submit') Change Password
							// end form-group
