extends common/layout
block append vars
	- var bodyClass = 'home'
block append content

	.hero-section.full-screen.has-map.has-sidebar
		.map-wrapper
			#map-homepage.map(data-map-container data-map-type='hero')
		.results-wrapper
			.sidebar-detail
				.tse-scrollable
					.tse-content
						.sidebar-wrapper
			.results
				.tse-scrollable
					.tse-content
						.section-title
							h2
								| Search Results
								span.results-number
						#results-content
						button#wpas-load-btn.btn.btn-primary Load More Results
						#wpas-load
		.form.search-form.vertical
			.container
				- var formData = {
				-			resultsWrap:'#wpas-results',
				-			resultsPreloader:'#wpas-load',
				-			buttonText:'Load More Results',
				-			buttonLoad:'#wpas-load-btn',
				-			callback:'ajax_callback',
				-			loading:'http://localhost:8080/upages/wp-content/plugins/wpas/img/loading.gif',
				-			showDefault:true,
				-			urlHash:'results',
				-	}
				form(data-ajax-form data-ajax-form-option=formData)
					.row
						.col-md-4.col-sm-4
							.wrapper.clearfix
								.form-group
									input.form-control(type='text' name='keyword' placeholder='Enter keyword')
								.form-group
									select.form-control.selectpicker(name='location')
										option(value='') Location
										option(value='1') New York
										option(value='2') Washington
										option(value='3') London
										option(value='4') Paris
								.form-group
									select.form-control.selectpicker(name='category')
										option(value='') Category
										option(value='1') Restaurant
										option(value='2') Event
										option(value='3') Adrenaline
										option(value='4') Sport
										option(value='5') Wellness
								.form-group
									input.form-control(type='text' name='min-price' placeholder='Minimal Price')
								.form-group
									button.btn.btn-primary.pull-right(type='submit')
										| Search Now
										i.fa.fa-search